# Cloud Storage System Environment Variables

# ====================
# Application Settings
# ====================
NODE_ENV=development
APP_PORT=3000
CONTROLLER_PORT=6000
NODE_START_PORT=5001
ADMIN_WS_PORT=8081
ADMIN_HTTP_PORT=8082

# ====================
# Email Configuration
# ====================
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# ====================
# Security Settings
# ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-too
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=10

# ====================
# Storage Settings
# ====================
DEFAULT_STORAGE_LIMIT=1073741824  # 1GB in bytes
CHUNK_SIZE=1048576                # 1MB in bytes
MAX_FILE_SIZE=5368709120          # 5GB in bytes
BASE_STORAGE_PATH=./storage

# ====================
# Database (Optional)
# ====================
# MONGODB_URI=mongodb://localhost:27017/cloud_storage
# REDIS_URL=redis://localhost:6379

# ====================
# Logging
# ====================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ====================
# CORS (for web dashboards)
# ====================
CORS_ORIGIN=http://localhost:3000,http://localhost:8082

# ====================
# Admin Settings
# ====================
ADMIN_EMAIL=admin@example.com
ADMIN_INITIAL_PASSWORD=ChangeMe123!

# ====================
# SSL/TLS (for production)
# ====================
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# USE_HTTPS=false

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# Monitoring
# ====================
ENABLE_METRICS=true
METRICS_PORT=9090